<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_input_bool_fucntion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="uhjhl"
        android:background="#ff97a8ff"
        android:clickable="false"
        android:editable="true"
        android:enabled="true"
        android:maxLines="1"
        android:minLines="1"
        android:minWidth="200dp"
        android:nestedScrollingEnabled="false"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button_minimize"
        android:layout_below="@+id/editText_input_bool_fucntion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_minimization_result"
        android:layout_marginTop="40dp"
        android:text="uhjhl"
        android:background="#ff97a8ff"
        android:clickable="false"
        android:editable="true"
        android:enabled="true"
        android:maxLines="1"
        android:minLines="1"
        android:minWidth="200dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/button_minimize"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>